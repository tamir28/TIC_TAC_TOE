<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/playerO"
        android:layout_width="74dp"
        android:layout_height="29dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="player O: 0"
        app:layout_constraintStart_toEndOf="@+id/playerX"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/i22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:background="@drawable/checkbox"
        android:onClick="onClick"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/i21"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:text="Restart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turn" />

    <Button
        android:id="@+id/i11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/checkbox"
        android:onClick="onClick"
        android:text=""
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/i10"
        app:layout_constraintTop_toBottomOf="@+id/i21" />

    <Button
        android:id="@+id/i10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/checkbox"
        android:onClick="onClick"
        android:text=""
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/i20" />

    <Button
        android:id="@+id/i20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/checkbox"
        android:onClick="onClick"
        android:text=""
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/i00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/checkbox"
        android:onClick="onClick"
        android:text=""
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/i10" />

    <Button
        android:id="@+id/i21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:background="@drawable/checkbox"
        android:onClick="onClick"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/i20"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/turn"
        android:layout_width="156dp"
        android:layout_height="42dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="turn: playerX"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/i01" />

    <Button
        android:id="@+id/i12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/checkbox"
        android:onClick="onClick"
        android:text=""
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/i11"
        app:layout_constraintTop_toBottomOf="@+id/i22" />

    <Button
        android:id="@+id/i01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/checkbox"
        android:onClick="onClick"
        android:text=""
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/i00"
        app:layout_constraintTop_toBottomOf="@+id/i11" />

    <TextView
        android:id="@+id/playerX"
        android:layout_width="76dp"
        android:layout_height="28dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="player X: 0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/i02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/checkbox"
        android:onClick="onClick"
        android:text=""
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/i01"
        app:layout_constraintTop_toBottomOf="@+id/i12" />

</androidx.constraintlayout.widget.ConstraintLayout>